type User {
  id: ID! @unique
  name: String!
  email: String!
}

type Ingredient {
  id: ID! @unique
  title: String!
  measurement: String!
}

type Step {
  id: ID! @unique
  description: String!
}

type Direction {
  id: ID! @unique
  steps: [Step!]!
}

type Recipe {
  id: ID! @unique
  title: String!
  description: String!
  preperationTime: Int!
  cookingTime: Int!
  image: String
  largeImage: String
  ingredients: [Ingredient!]!
  directions: [Direction!]!
  #createdAt: DateTime!
  #updatedAt: DateTime!
  # user: User!
}